{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      // --- Overrides for Node.js Environment ---
      "module": "CommonJS",
      "target": "ES2022",
      "lib": ["ES2022"],
      "types": ["node"],
      "moduleResolution": "node",
      "composite": false,
      "noEmit": false
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }